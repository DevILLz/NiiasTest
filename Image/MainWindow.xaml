<Window x:Class="WPF.StationViewTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="LightGray">
    <Grid>
        <Canvas Width="500" Height="300" Name="StationDrawArea"/>
        <ComboBox ItemsSource="{Binding Parks}" SelectedItem="{Binding SelectedPark}" Width="100" Height="25" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>
